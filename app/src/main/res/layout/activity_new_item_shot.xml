<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseOverlay"
    android:orientation="vertical"
    tools:context=".NewItemShot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/placeholder" />

            <TextView
                android:id="@+id/itemLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/edit_item_name"
                android:textColor="@color/colorBaseText"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_search_round"
                android:ems="10"
                android:inputType="textPersonName" />

            <Switch
                android:id="@+id/edit_item_synth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/edit_item_synth"
                android:textColor="@color/colorBaseText"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edit_item_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_item_rec"
                    android:textColor="@color/colorDisabledText"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/edit_item_rec_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    app:srcCompat="@drawable/ic_record_disabled" />

                <ImageView
                    android:id="@+id/edit_item_play_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    app:srcCompat="@drawable/ic_play_disabled" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/colorBaseText" />

            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.GridLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/valid_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="20dp"
        android:layout_weight="0.1"
        app:srcCompat="@drawable/ic_valid" />

</LinearLayout>