<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseOverlay"
    android:orientation="vertical"
    tools:context=".ManagePictos">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manage_pictos_title"
        android:textAlignment="center"
        android:textColor="@color/colorBaseText"
        android:textSize="24sp" />

    <SearchView
        android:id="@+id/search_pictos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search_round"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <GridView
        android:id="@+id/manage_pictos"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>