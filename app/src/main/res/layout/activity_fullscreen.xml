<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#0099cc"
             tools:context="org.eu.fr.nveo.manonparle.FullscreenActivity" android:id="@+id/fullscreen_content">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <org.eu.fr.nveo.manonparle.LinearIntercept
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent" android:id="@+id/mth">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/btnLeft"
                android:layout_weight="1" android:scaleType="fitCenter" android:contentDescription="left"
        />
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/btnRight"
                android:layout_weight="1" android:scaleType="fitCenter" android:contentDescription="right"/>
    </org.eu.fr.nveo.manonparle.LinearIntercept>
</FrameLayout>
