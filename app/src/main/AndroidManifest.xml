<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.eu.nveo.manonparle"
          android:installLocation="preferExternal">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".SelectItem"
                android:configChanges="keyboardHidden|screenSize"
                android:label="@string/app_name"
                android:parentActivityName=".Select"
                android:screenOrientation="landscape"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="org.eu.nveo.manonparle.Select"/>
        </activity>
        <activity
                android:name=".DatabaseCreation"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/title_activity_database_creation"
                android:parentActivityName=".Select"
                android:screenOrientation="landscape"
                android:theme="@style/FullscreenTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="org.eu.nveo.manonparle.Select"/>
        </activity>
        <activity
                android:name=".Select"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/title_activity_welcome"
                android:parentActivityName=".Loader"
                android:screenOrientation="landscape"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="org.eu.nveo.manonparle.Loader"/>
        </activity>
        <activity
                android:name=".Loader"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/app_name"
                android:screenOrientation="landscape"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>